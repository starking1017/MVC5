@model MVC5.Models.Device

@{
  ViewBag.Title = "title";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

@*header*@
<div class="row">
  <div class="col-sm-4">
    <h2>風險挖掘</h2>

  </div>
  <div>
    <input type="button" class="btn btn-primary pull-right" value="回生命管理選單"
           onclick="location.href='@Url.Action("LifeManageMenu", "Devices", new { id = Model.ID })'" />
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">風險挖掘</div>
  <div class="panel-body">
    <img src="~/temp/@ViewBag.name" alt="" />
    <p></p>
    <form>
      <label>當一台設備突然報廢後，其所造成的金錢損失為(元):</label>
      <div class="form-group">
        <div class="form-inline">
          <label>最大</label>
          <input class="form-control" type="text" placeholder="10000" />
          <label>可能性(%)</label>
          <input class="form-control" type="text" placeholder="20" />
        </div>
      </div>

      <div class="form-group">
        <div class="form-inline">
          <label>中等</label>
          <input class="form-control" type="text" placeholder="8000" />
          <label>可能性(%)</label>
          <input class="form-control" type="text" placeholder="60" />
        </div>
      </div>

      <div class="form-group">
        <div class="form-inline">
          <label>最小</label>
          <input class="form-control" type="text" placeholder="6000" />
          <label>可能性(%)</label>
          <input class="form-control" type="text" placeholder="20" />
        </div>
      </div>
      <div class="form-group">

        <div class="form-inline">
          <label>平均</label>
          <input class="form-control" type="text" placeholder="8000" />
        </div>
      </div>
              <button type="submit" class="btn btn-success">生成曲線</button>

    </form>


    <div class="box">
      <h4>上傳設備-風險</h4>
    </div>
    <div class="row">
      <div class="col-lg-8">
        <div class="demo-section k-content">
          @(Html.Kendo().Upload().Name("files").Async(a => a
              .Save("Save", "Devices")
              .Remove("Remove", "Devices")
              .SaveField("files")))
        </div>
      </div>
    </div>
    <p></p>


    <ul>
      <li>
        以下功能要求您在設備信息頁面上傳設備安裝年份表
      </li>
    </ul>
    <div class="form-inline">
      <label>預測到</label>
      <select class="form-control">
        @for (int i = 0; i < 50; ++i)
        {

          <option>@(2016 + i)</option>
        }
      </select>
      <label>
        年以前，您的xxx報廢數量將為N台
      </label>
    </div>

    <p></p>
    <input type="button" class="btn btn-success" value="詳細設備報廢率報告" />

  </div>
</div>