@model MVC5.Models.Device

@{
  ViewBag.Title = "title";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

@*header*@

<div class="row">
  <div class="col-sm-4">
    <h2>风险挖掘</h2>

  </div>
  <div>
    <input type="button" class="btn btn-primary pull-right" value="回生命管理选单"
           onclick="location.href='@Url.Action("LifeManageMenu", "Devices", new { id = Model.ID })'" />
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">风险挖掘</div>
  <div class="panel-body">
    <p></p>
    @using (Html.BeginForm("GenerateRiskCurveByInput", "Devices", FormMethod.Post, new { @class = "col-md-6" }))
    {
      <label>当一台设备突然报废后，其所造成的金钱损失为(元):</label>
      <p></p>
      <div class="form-group">
        <div class="form-inline">
          <label>最大</label>
          <input class="form-control" type="text" placeholder="10000" id="max" />
          <label>可能性(%)</label>
          <input class="form-control" type="text" placeholder="20" id="maxpercent" />
        </div>
      </div>

      <div class="form-group">
        <div class="form-inline">
          <label>中等</label>
          <input class="form-control" type="text" placeholder="8000" id="mid" />
          <label>可能性(%)</label>
          <input class="form-control" type="text" placeholder="60" id="midpercent" />
        </div>
      </div>

      <div class="form-group">
        <div class="form-inline">
          <label>最小</label>
          <input class="form-control" type="text" placeholder="6000" id="min" />
          <label>可能性(%)</label>
          <input class="form-control" type="text" placeholder="20" id="minpercent" />
        </div>
      </div>

      <div class="form-group">
        <div class="form-inline">
          <label>平均</label>
          <input class="form-control" type="text" placeholder="8000" id="average" name="average" readonly />
        </div>
      </div>

      @Html.Hidden("id", Model.ID)
      <input type="submit" class="btn btn-success" value="生成曲线" />
    }


    <div class="col-md-6">
      @if (ViewBag.name != null && ViewBag.name != "")
      {
        <img src="~/users/@User.Identity.Name/@Model.ID/@ViewBag.name?@DateTime.Now" alt="" />
      }
    </div>

    <p></p>

    <div class="col-md-7">
      <div class="paddingtop10">
        <label>或...</label>
      </div>

      <div class="demo-section k-content">
        @(Html.Kendo().Upload()
              .Name("files")
              .HtmlAttributes(new { accept = ".xls, xlsx" })
              .HtmlAttributes(new { accept = ".csv" })
              .HtmlAttributes(new { accept = "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" })
              .Messages(m => m.Select("上传設備 - 風險..."))
              .Async(a => a
                .SaveField("files")
                .Save("SaveDeviceRisk", "Upload", new { id = Model.ID }))
        //              .Remove("RemoveDeviceFailure", "Upload"))
        )
      </div>

      <p></p>

      <div>
        <input type="submit" class="btn btn-success" value="生成曲线"
               onclick="location.href='@Url.Action("GenerateRiskCurve", "Devices", new { id = Model.ID })'" />
      </div>
    </div>
    <p></p>

    <div class="row col-md-12 paddingtop20">
      <ul>
        <li>
          以下功能要求您在设备信息页面上传设备安装年份表
        </li>
      </ul>

      <div class="form-inline text-center">
        <label>预测到</label>
        <select class="form-control" name="Selectyear" id="Selectyear">
          @for (int i = 0; i < 20; ++i)
          {

            <option>@(2017 + i)</option>
          }
        </select>
        <label>
          年以前，您的 @Model.Name 浅在风险将为 <label id="number"></label> 元
        </label>
      </div>

      <p></p>
      <input type="button" class="btn btn-success center-block" value="下载详细设备風險报告"
             onclick="location.href='@Url.Action("DownloadDeviceRisk", "Devices", new { id = Model.ID })'" />

    </div>
  </div>
</div>

<script language="javascript">
  var result = @Html.Raw(Json.Encode(ViewBag.result));

  if (result !== "" && result!== null) {
    $.alert({
      title: '錯誤!',
      content: result
    });
  }
</script>

<script language="javascript">
  $(document)
		.ready(function () {
		  $("input")
				.keyup(function () {
				  var average = parseInt($("#max:text").val()) * parseFloat($("#maxpercent:text").val() / 100) +
						parseInt($("#mid:text").val()) * parseFloat($("#midpercent:text").val() / 100) +
						parseInt($("#min:text").val()) * parseFloat($("#minpercent:text").val() / 100);
				  $("#average").val(average);
				});
		});
</script>

<script language="javascript">
  $(document).ready(function () {
    $("#Selectyear")
	 .change(function () {

	   var fcostforecast = @Html.Raw(Json.Encode(ViewBag.fcostforecast));
	   var str = "";
	   $("select option:selected").each(function () {
	     str += fcostforecast[$(this).text()];
	   });
	   $("#number").text(str);
	 })
	 .trigger("change");
  });
</script>